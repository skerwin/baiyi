source 'https://mirrors.tuna.tsinghua.edu.cn/git/CocoaPods/Specs.git'
platform :ios, '12.0'
use_frameworks!
target ‘BaiYi’ do

pod 'Alamofire', '~> 5.2'

# 图片异步请求
pod 'Kingfisher'

# 下拉刷新
pod 'MJRefresh'

# 模型转换
pod 'ObjectMapper', '~> 3.3'

# JSON解析
pod 'SwiftyJSON'

 # 对话框
pod 'SVProgressHUD'
# 本地保存密码
#pod 'SAMKeychain'
# 透明指示层
pod 'JGProgressHUD'
# 滑动小tab
# pod 'PageMenu'
# 轻便缓存框架
#pod 'Cache', '~> 4.1.2'
 # 键盘弹出控制
pod 'IQKeyboardManagerSwift'

 # UserDefaults工具
pod 'SwiftyUserDefaults'

#pod '顶部轮播图片'
pod 'SDCycleScrollView','~> 1.75'

#pod '广告启动图'
pod 'XHLaunchAd'

#选择框
pod 'ActionSheetPicker-3.0'

#pod '视频播放框架'
pod 'ZFPlayer/ControlView', '~> 3.0'
pod 'ZFPlayer/AVPlayer', '~> 3.0'

 # 手写代码约束
pod 'SnapKit', '~> 4.0.0'

end
